{% extends 'base.html.twig' %}

{% block body %}
    <section class="equipe">
        <h1>Membre de l'équipe</h1>
        {% for membre in team %}
            <article>
                <img src="{{ membre.picture }}" alt="{{ membre.lastname }}">
                <div>
                    <h3>
                        {{ membre.firstname }} {{ membre.lastname|upper }}
                    </h3>
                    <p>Créateur de : {{ membre.creatorOf }}</p>
                    <p>Date de naissance : {{ membre.dateOfBirth | date("d / m / Y") }}</p>
                    <p>{{ membre.description }}</p>
                </div>
            </article>
        {% endfor %}
    </section>
{% endblock %}

{% block title %}
    About us | {{ parent() }}
{% endblock %}
